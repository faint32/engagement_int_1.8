<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 通用 -->
    <style name="info_text_base">
        <item name="android:includeFontPadding">false</item>
        <item name="android:singleLine">true</item>
    </style>
     <style name="ContentSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/content_gray</item>
    </style>
     <style name="Content">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/content_gray</item>
    </style>
    <style name="BlackShadow">
        <item name="android:shadowColor">@color/black_shadow</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.5</item>
    </style>
    
    <!-- 对话框的按钮的样式 -->
    <style name="dialog_btn_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@drawable/color_dialog_btn_text_selector</item>
        <item name="android:background">@drawable/btn_common_bg_selector</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>
    
    <style name="common_purple_h36_btn_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/info_txt_size_17</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_send_gift_selector</item>
        <item name="android:height">@dimen/info_margin_36dp</item>
    </style>
    
	 <!-- 音频 -->
    <style name="audio_time_style" parent="info_text_base">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
    </style>
     <!-- 登录 -->
    <style name="LoginBtn" parent="BlackShadow">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
   	 <!-- 自定义dialog -->
    <style name="CustomDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item><!--边框-->  
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->  
        <item name="android:windowIsTranslucent">true</item><!--半透明-->  
    </style>
     
       	 <!-- 自定义全透明dialog -->
    <style name="CustomDialogTranspatent" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFrame">@null</item><!--边框-->  
        <item name="android:windowIsFloating">false</item><!--是否浮现在activity之上-->  
        <item name="android:windowIsTranslucent">false</item><!--半透明-->  
    </style>
    
    
    <style name="ActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>
    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#50000000</item>
        <item name="android:backgroundSplit">@color/red</item>
        <item name="android:backgroundStacked">@color/blue</item>
        <item name="android:divider">@color/blue</item>
    </style>
    <!-- 登录注册输入框属性 -->
    <style name="AccountInputEdittext">
        <item name="android:background">@drawable/input_bg</item>
        <item name="android:textColorHint">@color/content_text</item>
        <item name="android:textColor">@color/text_dark_color</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:paddingBottom">8dip</item>
    </style>
    <!-- 登录注册页面属性 -->
    <style name="AccountLayout">
        <item name="android:paddingLeft">@dimen/layout_padding</item>
        <item name="android:paddingRight">@dimen/layout_padding</item>
    </style>
    <!-- 登录注册标题栏属性 -->
    <style name="AccountTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_bar_height</item>
        <item name="android:layout_marginBottom">@dimen/reg_layout_title_content_padding</item>
    </style>
    
    <style name="ActionBarThemeOverlay" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/CustomActionBarOverlay</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="CustomActionBarOverlay" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#50000000</item>
    </style>
    
    <style name="user_page_tag_txt_style">
        <item name="android:background">@color/info_tag_back_color</item>
        <item name="android:paddingLeft">@dimen/info_margin_12dp</item>
        <item name="android:paddingRight">@dimen/info_margin_12dp</item>
        <item name="android:paddingTop">@dimen/info_margin_4dp</item>
        <item name="android:paddingBottom">@dimen/info_margin_4dp</item>
        <item name="android:drawablePadding">@dimen/info_margin_4dp</item>
        <item name="android:textSize">@dimen/info_txt_size_17</item>
        <item name="android:textColor">@color/info_tag_txt_color</item>
    </style>
    
    <style name="radiobutton_user_page">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>  
        <item name="android:background">@drawable/btn_gift_group_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>  
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="radiobutton_chat_list_tab">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/txt_color_chat_list_tab_selector</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>  
        <item name="android:background">@drawable/btn_chat_list_tab_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>  
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="radiobutton_view_topic_tab">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>  
        <item name="android:background">@drawable/btn_chat_view_topic_tab_selector</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>  
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="switch_style">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">36dp</item>
    </style>
    <style name="switch_style_settting" parent="@style/switch_style">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="popwin_anim_style">  
         <item name="android:windowEnterAnimation">@anim/alpha_0_to_1</item>  
         <item name="android:windowExitAnimation">@anim/alpha_1_to_0_slow</item>  
    </style>  
    
</resources>
