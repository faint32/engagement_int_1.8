<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <EditText 
        android:id="@+id/self_intr_edit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_margin_160dp"
        android:layout_marginTop="@dimen/info_margin_24dp"
        
        android:layout_marginLeft="@dimen/info_margin_16dp"
        android:layout_marginRight="@dimen/info_margin_16dp"
        
        android:paddingLeft="@dimen/info_margin_8dp"
        android:paddingRight="@dimen/info_margin_8dp"
        android:paddingTop="@dimen/info_margin_8dp"
        android:paddingBottom="@dimen/info_margin_8dp"
        
        android:focusable="true"
        android:gravity="top|left"
        android:textColor="@color/black"
        android:textSize="@dimen/info_txt_size_17"        
        android:background="@drawable/bg_textarea"
        android:hint="@string/setting_fb_hint"
        />
    <TextView 
        android:id="@+id/txt_num_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_margin_8dp"
        android:layout_marginRight="@dimen/info_margin_16dp"
        android:layout_gravity="right"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@color/info_audio_txt_color"
        android:textSize="@dimen/text_size_11"
        android:text="0/400"/>
</LinearLayout>
