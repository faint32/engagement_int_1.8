<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/dialog_bg">
    <TextView
        android:id="@+id/date_picker_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:gravity="center_vertical"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:textSize="20sp"
        android:textColor="@color/black" 
    />
    <TextView 
        android:id="@+id/date_picker_title_divider"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/purple_dark"
        android:layout_marginBottom="20dip"
    />
    <com.netease.engagement.view.EgmDatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" 
    />
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/dialog_button_divider"
        android:layout_marginTop="20dip"
    />
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	<TextView
	        android:id="@+id/date_picker_cancel"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="@string/cancel"
	        android:textColor="@color/purple_dark"
	        android:textSize="20sp"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	    />
    	<TextView 
	        android:layout_width="1dip"
	        android:layout_height="match_parent"
	        android:layout_weight="0"
	        android:background="@color/dialog_button_divider"
	    />
        <TextView
	        android:id="@+id/date_picker_ok"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="@string/confirm"
	        android:textColor="@color/purple_dark"
	        android:textSize="20sp"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	    />
    </LinearLayout>
</LinearLayout>
