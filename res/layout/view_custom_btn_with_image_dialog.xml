<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	android:layout_gravity="center_horizontal"
      	android:gravity="center"
        android:layout_marginTop="30dip"
        android:text="@string/rec_tip_select_avatar1"
        android:textSize="@dimen/text_size_17"
        android:textColor="@color/black"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dip"
        android:text="@string/rec_tip_select_avatar2"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip" >
        
        <ImageView
	        android:id="@+id/dialog_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:contentDescription="@string/pic" />
        
    </RelativeLayout>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_1"
        android:layout_marginTop="20dip"
        android:background="@color/dialog_button_divider"
        android:contentDescription="@string/pic"
    />

    <LinearLayout
        android:id="@+id/dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/purple_dark"
            android:textSize="@dimen/text_size_20"
            android:background="@drawable/btn_common_bg_selector" />

        <ImageView
            android:id="@+id/dialog_divider3"
            android:layout_width="@dimen/info_divider_line_height"
            android:layout_height="match_parent"
            android:background="@color/dialog_button_divider" />

        <TextView
            android:id="@+id/dialog_btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/purple_dark"
            android:textSize="@dimen/text_size_20"
            android:background="@drawable/btn_common_bg_selector" />
    </LinearLayout>

</LinearLayout>