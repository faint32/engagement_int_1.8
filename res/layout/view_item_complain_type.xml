<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/info_margin_60dp"
    android:paddingLeft="@dimen/info_margin_16dp"
    android:background="@drawable/chat_list_selector" >
    
    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_centerVertical="true"
    	android:textColor="@color/black"
    	android:textSize="20sp" />
    
    <ImageView
        android:id="@+id/iv"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginRight="@dimen/info_margin_16dp"
    	android:layout_centerVertical="true"
    	android:layout_alignParentRight="true"
    	android:src="@drawable/icon_photo_selected_ok_48x48"
    	android:contentDescription="@string/pic"
    	android:visibility="invisible" />
    
    <ImageView
        android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:layout_alignParentBottom="true"
    	android:background="@color/list_divider_line_color"
    	android:contentDescription="@string/pic" />

</RelativeLayout>
