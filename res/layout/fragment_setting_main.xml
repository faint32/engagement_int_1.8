<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <include
            android:id="@+id/setting_msg"
            layout="@layout/setting_item_view" />
        <include
            android:id="@+id/setting_anti_harassment"
            layout="@layout/setting_item_view" />
     	<include
            android:id="@+id/setting_gifts_pic_tone"
            layout="@layout/setting_item_view_with_switcher" />
        <include
            android:id="@+id/setting_feedback"
            layout="@layout/setting_item_view" />

       
        <include
            android:id="@+id/setting_checkversion"
            layout="@layout/setting_item_view" />

        <include
            android:id="@+id/setting_clearcache"
            layout="@layout/setting_item_view" />

        <include
            android:id="@+id/setting_helpcenter"
            layout="@layout/setting_item_view" />
        <include
            android:id="@+id/setting_app_center"
            layout="@layout/setting_item_view" />
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/info_margin_40dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/btn_logout_selector"
            android:gravity="center"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            android:layout_marginLeft="@dimen/info_margin_16dp"
            android:layout_marginRight="@dimen/info_margin_16dp" />
        
    </LinearLayout>

</ScrollView>