<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/dialog_bg">
    <TextView
        android:id="@+id/date_picker_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:textSize="20sp"
        android:textColor="@color/black" 
        android:text="@string/rec_search_select_age_title"
    />
    <TextView 
        android:id="@+id/date_picker_title_divider"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="@color/purple_dark"
        android:layout_marginBottom="20dip"
    />
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center">
    	<LinearLayout
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:gravity="center_horizontal">
	    	<ImageView 
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/icon_pgregister_birthday_arrow_up"
	    	/>
    	    <net.simonvt.numberpicker.NumberPicker
		        android:id="@+id/search_age_picker_low"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal" 
		    />
    	    <ImageView 
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/icon_pgregister_birthday_arrow_down"
	    	/>
    	</LinearLayout>
	    
	    <ImageView 
	    	android:layout_width="16dip"
	        android:layout_height="2dip"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:background="@color/black"    
	    />
	    
	    <LinearLayout
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical"
	    	android:gravity="center_horizontal">
	    	<ImageView 
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/icon_pgregister_birthday_arrow_up"
	    	/>
    	    <net.simonvt.numberpicker.NumberPicker
		        android:id="@+id/search_age_picker_heigh"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal" 
		    />
    	    <ImageView 
	    	    android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:src="@drawable/icon_pgregister_birthday_arrow_down"
	    	/>
    	</LinearLayout>
    </LinearLayout>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/dialog_button_divider"
        android:layout_marginTop="20dip"
    />
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content">
    	<TextView
	        android:id="@+id/search_select_age_cancel"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="@string/cancel"
	        android:textColor="@color/purple_dark"
	        android:textSize="20sp"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	    />
    	<TextView 
	        android:layout_width="1dip"
	        android:layout_height="match_parent"
	        android:layout_weight="0"
	        android:background="@color/dialog_button_divider"
	    />
        <TextView
	        android:id="@+id/search_select_age_ok"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="@string/confirm"
	        android:textColor="@color/purple_dark"
	        android:textSize="20sp"
	        android:paddingTop="10dip"
	        android:paddingBottom="10dip"
	    />
    </LinearLayout>
</LinearLayout>
