<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20" />

    <ImageView
        android:id="@+id/dialog_divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/purple_dark" />

    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left|center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_20" />

    <ImageView
        android:id="@+id/dialog_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_divider_line_height"
        android:background="@color/dialog_button_divider" />

    <LinearLayout
        android:id="@+id/dialog_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dialog_btn_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/purple_dark"
            android:textSize="@dimen/text_size_20"
            android:background="@drawable/btn_common_bg_selector" />

        <ImageView
            android:id="@+id/dialog_divider3"
            android:layout_width="@dimen/info_divider_line_height"
            android:layout_height="match_parent"
            android:background="@color/dialog_button_divider" />

        <TextView
            android:id="@+id/dialog_btn_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/purple_dark"
            android:textSize="@dimen/text_size_20"
            android:background="@drawable/btn_common_bg_selector" />
    </LinearLayout>

</LinearLayout>