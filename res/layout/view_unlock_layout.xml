<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <View
            android:id="@+id/left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#99ffffff" />

        <View
            android:id="@+id/right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#99ffffff" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/middle_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/middle_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/as_yuan" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/as_btn" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/gift_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:paddingBottom="10dip"/>
        
        <LinearLayout
        	android:id="@+id/txt_coin_layout"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingBottom="8dip"
            android:orientation="vertical">
        
        	<TextView
        	    android:id="@+id/txt_coin"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/bg_pgviewphoto_bar_giftcoin"
	            android:gravity="center"
	            android:textColor="@color/white"
	            android:textSize="@dimen/info_level_txt_size" />
        
		</LinearLayout>
        
        <LinearLayout
        	android:id="@+id/txt_send_gift_layout"
        	android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="8dip"
            android:paddingBottom="6dip"
            android:orientation="vertical">
        	
           	<TextView
           	    android:id="@+id/txt_send_gift"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@drawable/btn_pgviewphoto_sendgift_selector" 
	            android:gravity="center"
	            android:text="@string/send_to_unlock"
	            android:textColor="@color/white"
	            android:textSize="@dimen/info_txt_size_17" />  
        
		</LinearLayout>

		<TextView
		    android:id="@+id/txt_praise_tip"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="21dip"
		    android:layout_gravity="center_horizontal"
		    android:gravity="center"
		    android:textSize="15sp"
		    android:textColor="#535353"
		    android:text="@string/praise_photo_tip"
		    android:drawablePadding="4dip"
		    android:visibility="gone"/>
		
    </LinearLayout>

</RelativeLayout>