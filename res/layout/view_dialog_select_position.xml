<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/reg_tip_dialog_bg_color">
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rec_select_position_content1"
        android:textSize="@dimen/text_size_17"
        android:textColor="@color/black"
        android:layout_marginTop="35dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
    />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:text="@string/rec_select_position_content2"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
    />
    <TextView 
        android:id="@+id/select_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center"
        android:text="@string/rec_btn_select_position"
        android:background="@drawable/bg_pglogin_window_input"
    />
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_1"
        android:layout_marginTop="50dip"
        android:background="@color/dialog_button_divider"
    />
    <TextView 
        android:id="@+id/select_position_ok"
        android:text="@string/confirm"
        android:enabled="false"
        style="@style/dialog_btn_style"
    />
</LinearLayout>