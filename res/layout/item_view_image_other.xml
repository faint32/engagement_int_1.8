<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_mesg_white"
    android:paddingBottom="@dimen/info_margin_2dp"
    android:paddingLeft="@dimen/info_margin_5dp"
    android:paddingStart="@dimen/info_margin_5dp"
    android:paddingRight="@dimen/info_margin_2dp"
    android:paddingEnd="@dimen/info_margin_2dp"
    android:paddingTop="@dimen/info_margin_2dp" >

    <com.netease.engagement.widget.LoadingImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/info_margin_3dp"
        android:layout_marginStart="@dimen/info_margin_3dp"
        android:maxHeight="@dimen/chat_list_image_max_height"
        android:maxWidth="@dimen/chat_list_image_max_height"
        android:minHeight="@dimen/info_margin_60dp"
        android:minWidth="@dimen/info_margin_60dp"
        android:scaleType="centerCrop" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/bg_chat_send_progressbar" 
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/private_image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/icon_photo_lock" 
        android:contentDescription="@string/pic"
        android:visibility="gone"
        />
    
</RelativeLayout>