<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/chat_receivermode_tip_lay"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/chat_receivermode_tip_bg_color"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/yixin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_pgchat_ear_white" />

        <TextView
            android:id="@+id/yixin_friend_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/play_audio_receiver_mode"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17" 
            android:layout_marginLeft="8dp"/>
       
    </LinearLayout>

</LinearLayout>