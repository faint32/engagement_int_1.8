<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" 
    >
    <ImageView 
        android:id="@+id/tip_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_gift_gray"
        />
    <TextView
        android:id="@+id/tip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_margin_8dp"
        android:gravity="center"
        android:text="@string/no_receive_gift_tip"
        android:textSize="@dimen/info_txt_size_17"
        android:textColor="@color/info_audio_txt_color"
        />
    
    <TextView
        android:id="@+id/tip_txt_prv_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/info_margin_40dp"
        android:lineSpacingExtra="@dimen/info_margin_4dp"
        android:text="@string/no_receive_gift_tip_2"
        android:textColor="@color/info_audio_txt_color"
        android:gravity="center"
        android:textSize="@dimen/info_more_data_txt_size" 
        />
    
    <TextView
        android:id="@+id/btn_submit_prv_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_margin_40dp"
        android:layout_marginLeft="@dimen/info_margin_10dp"
        android:layout_marginRight="@dimen/info_margin_10dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/info_margin_16dp"
        android:background="@drawable/btn_purple_selector"
        android:text="@string/upload_private_photo"
        android:textSize="@dimen/info_txt_size_17"
        android:textColor="@color/white"
        />
    
    
</LinearLayout>
