<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <RelativeLayout android:layout_width="match_parent"
    	android:layout_height="wrap_content">
        <com.netease.engagement.widget.ProgerssImageView
	        android:id="@+id/image"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_centerInParent="true"
	    	android:background="@color/rec_no_picture_bg"/>
	    
	    <com.netease.engagement.widget.UnLockView
	        android:id="@+id/unlock_view"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_centerHorizontal="true"
	        android:visibility="gone"
	        />
	    
	    <com.netease.engagement.widget.UnLockView
	        android:id="@+id/vip_view"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_centerHorizontal="true"
	        android:visibility="gone"
	        />
	    
	    <ProgressBar 
	        android:id="@+id/progressbar"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:visibility="gone"
	        />
	    
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:paddingBottom="@dimen/info_margin_16dp"
	        android:orientation="horizontal">
	        
	        <TextView
	            android:id="@+id/xian_pai_photo_tips"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_marginLeft="@dimen/info_margin_16dp"
	            android:background="@drawable/bg_pgchat_xianpaiphoto"
	            android:drawableLeft="@drawable/icon_tips_circle_black"
	            android:drawablePadding="@dimen/info_margin_4dp"
	            android:gravity="center_vertical"
	            android:paddingLeft="@dimen/info_margin_4dp"
	            android:text="@string/xian_pai_zhao_pian"
	            android:textColor="@color/black"
	            android:textSize="@dimen/text_size_14"
	            android:visibility="invisible" />
	        
	        <LinearLayout
		        android:id="@+id/praise_layout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_toLeftOf="@id/unlike_layout"
		        android:orientation="horizontal"
		        android:layout_marginRight="12dip"
		        android:paddingRight="12dip"
		        android:gravity="center"
		        android:background="@drawable/bg_pgviewphoto_bottom_bar_praise"
		        android:visibility="gone">
		        
		        <TextView
		            android:id="@+id/praise_icon"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/icon_praise_selector"/>
		        
		        <TextView
		            android:id="@+id/praise_num"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:textColor="@color/white"
		            android:textSize="@dimen/info_more_data_txt_size"/>
		        
		    </LinearLayout>
		    
	        <LinearLayout
		        android:id="@+id/unlike_layout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
		        android:orientation="horizontal"
		        android:layout_marginRight="16dip"
		        android:paddingRight="8dip"
		        android:gravity="center"
		        android:background="@drawable/bg_pgviewphoto_bottom_bar_praise"
		        android:visibility="gone">
		        
		        <TextView
		            android:id="@+id/unlike_icon"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/icon_unlike_selector"/>
		        
		        <TextView
		            android:id="@+id/unlike_num"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:textColor="@color/white"
		            android:textSize="@dimen/info_more_data_txt_size"/>
		        
		    </LinearLayout>
	        
	    </RelativeLayout>
    
	</RelativeLayout>
	
    <View android:id="@+id/divider"
        android:layout_height="4dp"
        android:layout_width="match_parent"
        android:background="#999999"/>
</LinearLayout>    
