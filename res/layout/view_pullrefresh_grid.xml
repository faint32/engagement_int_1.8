<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/pri_page_back_color"
    >
    <RelativeLayout 
        android:id="@+id/top_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_margin_48dp"
        >
        <TextView 
            android:id="@+id/back"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/info_margin_8dp"
	        android:layout_centerVertical="true"
	        android:background="@drawable/titlebar_a_selector"
	        android:drawableLeft="@drawable/bar_btn_back_a"
	        android:drawablePadding="-2dip"
	        android:textColor="@color/purple_dark"
	        android:textSize="16sp"
	        android:text="@string/back"
	        android:gravity="left|center_vertical"/>
        
        <TextView 
            android:id="@+id/middle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_receive_gift"
            android:textSize="@dimen/text_size_20"
            android:textColor="@color/black"
            />
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_title"
        >
	    <com.handmark.pulltorefresh.library.PullToRefreshGridView
	        android:id="@+id/pull_refresh_grid"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_centerInParent="true"
	        android:background="@color/pri_page_back_color"
	        android:gravity="fill"
	        android:stretchMode="columnWidth"
	        ptr:ptrDrawable="@drawable/loading_48x48_apng" />
	    <include 
	        android:id="@+id/no_gift_tip_layout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        layout="@layout/view_no_gift_tip_layout"
	        android:visibility="gone"
	        />
	    <TextView 
	        android:id="@+id/loading"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:text="@string/loading"
	        android:textSize="@dimen/text_size_17"
	        android:textColor="@color/black"
	        />
	</RelativeLayout>
</RelativeLayout>