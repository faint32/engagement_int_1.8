<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="48dip"
	android:orientation="vertical"
	android:visibility="gone">
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/info_send_gift_pager_divider"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
    
     <TextView
         android:id="@+id/who_invite_me"
         android:layout_width="0dip"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:background="@drawable/bg_chat_xiaoai_bottom_selector"
         android:visibility="gone"
         android:textSize="17sp"
         android:text="@string/who_invite_me"/>
     
     <View
         android:id="@+id/view"
         android:layout_width="0.5dip"
         android:layout_height="match_parent"
         android:visibility="gone"
         android:background="@color/info_send_gift_pager_divider"/>
     
     <TextView
         android:id="@+id/chat_feedback"
         android:layout_width="0dip"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:textSize="17sp"
         android:background="@drawable/bg_chat_xiaoai_bottom_selector"
         android:text="@string/chat_feedback"/>
     
     <View
         android:layout_width="0.5dip"
         android:layout_height="match_parent"
         android:background="@color/info_send_gift_pager_divider"/>
     
     
     <TextView
         android:id="@+id/chat_help_center"
         android:layout_width="0dip"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:textSize="17sp"
         android:background="@drawable/bg_chat_xiaoai_bottom_selector"
         android:text="@string/setting_helpcenter"/>
    
    </LinearLayout>
    

</LinearLayout>
