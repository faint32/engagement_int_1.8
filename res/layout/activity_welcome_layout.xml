<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_welcome">
    <ImageView 
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_gravity="center"
    	android:src="@drawable/icon_pgwelcome_txt"
    	android:layout_marginTop="100dip"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dip"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/entrance_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_select_sex_bg_selector"
            android:gravity="center"
            android:text="@string/reg_entrance_female"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/entrance_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@drawable/btn_select_sex_bg_selector"
            android:gravity="center"
            android:text="@string/reg_entrance_male"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:gravity="bottom|center_horizontal"
    	android:text="@string/app_copyright_netease"
    	android:textColor="@color/white"
    	android:textSize="9sp"
    	android:layout_marginBottom="16dip"
    />
</LinearLayout>