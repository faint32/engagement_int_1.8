<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <com.netease.engagement.view.imageviews.NeteaseCropImageView
        android:id="@+id/crop_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/btns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom="33dip" >

        <TextView
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/titlebar_b_selector"
            android:drawableLeft="@drawable/bar_btn_back_b"
            android:gravity="center_vertical"
            android:layout_marginLeft="8dip"
            android:drawablePadding="-2dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="返回"
            android:clickable="false"
            android:textColor="#ffffffff"
            android:textSize="17sp" />
        
        
        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/titlebar_b_selector"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dip"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:clickable="false"
            android:text="确定"
            android:textColor="#ffffffff"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>