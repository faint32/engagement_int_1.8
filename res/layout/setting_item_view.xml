<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg_selector"
    android:gravity="center_vertical"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_heigh"
        android:layout_marginLeft="@dimen/info_margin_16dp"
        android:layout_marginRight="@dimen/info_margin_12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tag_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17" />

        <TextView
            android:id="@+id/tag_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="已开启"
            android:textColor="@color/info_audio_txt_color"
            android:textSize="@dimen/text_size_12"
            android:layout_marginRight="@dimen/info_margin_4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tag_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/info_margin_12dp"
            android:background="@drawable/icon_pginfo_arrow_view_photo" />
    </LinearLayout>

    <TextView
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/info_divider_line_height"
        android:background="@color/list_divider_line_color" />

</LinearLayout>